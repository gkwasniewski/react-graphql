{
  "name": "react-graphql",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^1.4.3",
    "apollo-boost": "^0.1.12",
    "graphql": "^0.13.2",
    "react": "^16.4.2",
    "react-apollo": "^2.1.9",
    "react-dom": "^16.4.2",
    "react-scripts": "1.1.4",
    "node-sass-chokidar": "^1.3.0",
    "npm-run-all": "^4.1.3"
  },
  "scripts": {
    "start-js": "NODE_PATH=src react-scripts start",
    "start": "NODE_PATH=src npm-run-all -p watch-css start-js",
    "build-js": "NODE_PATH=src react-scripts build",
    "build": "NODE_PATH=src npm-run-all build-css build-js",
    "test": "NODE_PATH=src react-scripts test --env=jsdom",
    "eject": "NODE_PATH=src react-scripts eject",
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive --output-style compressed"
  },
  "devDependencies": {
    "node-sass": "^4.9.2",
    "sass-loader": "^7.1.0"
  }
}
